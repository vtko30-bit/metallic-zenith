generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String     @default("STAFF") // ADMIN, STAFF
  movements     Movement[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// SQLite does not support enums, using String
// Uom: UNIDAD | KILOS | GRAMOS | LITROS

model Warehouse {
  id                     String     @id @default(uuid())
  name                   String
  location               String?
  movementsAsOrigin      Movement[] @relation("OriginWarehouse")
  movementsAsDestination Movement[] @relation("DestinationWarehouse")
}

model Product {
  id             String  @id @default(uuid())
  name           String
  description    String?
  uom            String // SQLite compatibility
  minStock       Float   @default(0)
  price          Float   @default(0)
  isFinishedGood Boolean @default(false)

  movementItems     MovementItem[]
  recipeAsMain      Recipe?            @relation("MainProduct")
  recipeIngredients RecipeIngredient[]
}

// MovementType: ENTRADA | SALIDA | TRASPASO | PRODUCCION | AJUSTE

model Movement {
  id                     String   @id @default(uuid())
  type                   String // SQLite compatibility
  originWarehouseId      String?
  destinationWarehouseId String?
  userId                 String?
  date                   DateTime @default(now())
  reference              String?

  user                 User?          @relation(fields: [userId], references: [id])
  originWarehouse      Warehouse?     @relation("OriginWarehouse", fields: [originWarehouseId], references: [id])
  destinationWarehouse Warehouse?     @relation("DestinationWarehouse", fields: [destinationWarehouseId], references: [id])
  items                MovementItem[]
}

model MovementItem {
  id         String @id @default(uuid())
  movementId String
  productId  String
  quantity   Float

  movement Movement @relation(fields: [movementId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])
}

model Recipe {
  id        String @id @default(uuid())
  productId String @unique

  product     Product            @relation("MainProduct", fields: [productId], references: [id])
  ingredients RecipeIngredient[]
}

model RecipeIngredient {
  id        String @id @default(uuid())
  recipeId  String
  productId String
  quantity  Float

  recipe  Recipe  @relation(fields: [recipeId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
